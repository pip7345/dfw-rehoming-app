{
  "name": "dfw-rehoming-app",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "build/web/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:css\" \"npm run open:browser\"",
    "dev:web": "nodemon --watch src --ext ts,js,json,ejs --exec node --experimental-specifier-resolution=node --loader ts-node/esm src/web/server.ts",
    "dev:api": "nodemon --watch src --ext ts,js,json --exec node --experimental-specifier-resolution=node --loader ts-node/esm src/api/server.ts",
    "dev:css": "npx @tailwindcss/cli -i ./src/web/public/styles.css -o ./src/web/public/tailwind.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/web/public/styles.css -o ./src/web/public/tailwind.css --minify",
    "open:browser": "powershell -Command \"Start-Sleep -Seconds 2; Start-Process http://localhost:3000\"",
    "build": "npm run build:css && tsc",
    "start": "concurrently \"npm run start:web\" \"npm run start:api\"",
    "start:web": "node build/web/server.js",
    "start:api": "node build/api/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init_users",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node --experimental-specifier-resolution=node --loader ts-node/esm prisma/seed.ts",
    "docs": "npm --prefix ./planning-docs start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "prisma": "^7.0.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.10.1",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.4",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.6",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "node --experimental-specifier-resolution=node --loader ts-node/esm prisma/seed.ts"
  }
}
