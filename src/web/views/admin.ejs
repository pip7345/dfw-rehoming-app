<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin - DFW Dog Rehoming</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link href="/tailwind.css" rel="stylesheet" />
  <%- include('partials/analytics-umami') %>
</head>
<body class="min-h-screen flex flex-col bg-bg-primary">
  <%- include('partials/nav-bar', { user }) %>

  <div class="flex-1">
    <div class="max-w-4xl mx-auto px-4 py-12">
      <h1 class="text-3xl font-bold text-text-primary mb-8">Admin Dashboard</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-danger/20 text-red-300 px-4 py-3 rounded-lg mb-6">
          <%= error %>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="bg-success/20 text-green-300 px-4 py-3 rounded-lg mb-6">
          <%= success %>
        </div>
      <% } %>

      <!-- User Management -->
      <div class="bg-bg-secondary rounded-xl p-6 mb-6">
        <h2 class="text-xl font-bold text-text-primary mb-4">Reset User Password</h2>
        <form method="POST" action="/admin/reset-password" class="space-y-4">
          <div class="form-group">
            <label class="block text-text-primary mb-2">User Email</label>
            <input type="email" name="user_email" required class="input w-full" placeholder="user@example.com" />
          </div>
          <div class="form-group">
            <label class="block text-text-primary mb-2">New Password</label>
            <input type="password" name="new_password" required class="input w-full" placeholder="Enter new password" minlength="6" />
          </div>
          <button type="submit" class="btn btn-danger">Reset Password</button>
        </form>
      </div>

      <!-- User List -->
      <div class="bg-bg-secondary rounded-xl p-6">
        <h2 class="text-xl font-bold text-text-primary mb-4">All Users</h2>
        <div class="overflow-x-auto">
          <table class="w-full text-text-secondary">
            <thead class="border-b border-border">
              <tr>
                <th class="text-left py-3 px-4">Email</th>
                <th class="text-left py-3 px-4">Display Name</th>
                <th class="text-left py-3 px-4">Created</th>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length > 0) { %>
                <% users.forEach(u => { %>
                  <tr class="border-b border-border hover:bg-bg-hover">
                    <td class="py-3 px-4"><%= u.email %></td>
                    <td class="py-3 px-4"><%= u.display_name %></td>
                    <td class="py-3 px-4"><%= new Date(u.created_at).toLocaleDateString() %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="3" class="py-6 text-center text-text-muted">No users found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer', { user }) %>
</body>
</html>
