<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Profile - DFW Dog Rehoming</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link href="/tailwind.css" rel="stylesheet" />
  <%- include('partials/analytics-umami') %>
</head>
<body class="min-h-screen flex flex-col bg-bg-primary">
  <%- include('partials/nav-bar', { user }) %>

  <div class="flex-1">
    <div class="max-w-2xl mx-auto px-4 py-12">
      <h1 class="text-3xl font-bold text-text-primary mb-8">Profile Settings</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-danger/20 text-red-300 px-4 py-3 rounded-lg mb-6">
          <%= error %>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="bg-success/20 text-green-300 px-4 py-3 rounded-lg mb-6">
          <%= success %>
        </div>
      <% } %>

      <!-- User Information -->
      <div class="bg-bg-secondary rounded-xl p-6 mb-6">
        <h2 class="text-xl font-bold text-text-primary mb-4">Account Information</h2>
        <div class="space-y-3 text-text-secondary">
          <div>
            <span class="font-semibold">Email:</span> <%= user.email %>
          </div>
          <div>
            <span class="font-semibold">Display Name:</span> <%= user.display_name %>
          </div>
        </div>
      </div>

      <!-- Change Password -->
      <div class="bg-bg-secondary rounded-xl p-6">
        <h2 class="text-xl font-bold text-text-primary mb-4">Change Password</h2>
        <form method="POST" action="/profile/change-password" class="space-y-4">
          <div class="form-group">
            <label class="block text-text-primary mb-2">Current Password</label>
            <input type="password" name="current_password" required class="input w-full" placeholder="Enter current password" />
          </div>
          <div class="form-group">
            <label class="block text-text-primary mb-2">New Password</label>
            <input type="password" name="new_password" required class="input w-full" placeholder="Enter new password" minlength="6" />
          </div>
          <div class="form-group">
            <label class="block text-text-primary mb-2">Confirm New Password</label>
            <input type="password" name="confirm_password" required class="input w-full" placeholder="Confirm new password" minlength="6" />
          </div>
          <button type="submit" class="btn btn-primary">Update Password</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer', { user }) %>
</body>
</html>
